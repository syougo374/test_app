<!DOCTYPE html>
<html>
  <head>
    <title>TwTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= link_to "新規投稿", new_blog_path, class: "new_create btn btn-primary" %>
    <% if logged_in? %>
      <%= link_to "Profile", user_path(current_user.id),class:'btn btn-success' %>
      <%= link_to "Logout", session_path(current_user.id), method: :delete,class:'btn btn-danger' %>
      <%= link_to "HOME", blogs_path,class:'btn btn-secondary' %>
    <% else %>
      <%= link_to "Sign up", new_user_path %>
      <%= link_to "Login", new_session_path %>
    <% end %>
    </header>
    <%= flash[:notice] %>
    <%= yield %>
    <footer></footer>
  </body>
</html>
